<views:MvxWindowsPage
    x:Class="HelloCross.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HelloCross.UWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.Platforms.Uap.Views"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <TextBlock
            Name="TextWelcome"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.AlignVerticalCenterWithPanel="True"
            Text="{Binding Title}" />

        <Button
            Name="TextMessage"
            Margin="0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TextWelcome"
            Content="Search Book" Command="{Binding ShowResearchCommand}"/>

        <Button
            Margin="0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TextMessage"
            Content="All Queries" Command="{Binding ShowQueriesCommand}"/>

    </RelativePanel>
</views:MvxWindowsPage>
